<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tcfMainLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    tools:context="com.es3649.execsec.activities.TransactionCountFragment">
    <!-- TODO we need better graphics for this -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:background="@color/colorAccentLight" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="false"
            style="@style/TextDark"
            android:text="@string/tcfTransactionCount" />

        <TextView
            android:id="@+id/tcfTransactionCounterTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold|italic"
            android:textSize="36sp"
            android:textColor="@color/colorPrimaryLight"/>
    </LinearLayout>

</FrameLayout>
